[
    {
        "name": "Serial TX/RX Connection",
        "template": {
            "Serial TX/RX Connection": {
                "fieldName": "fcb_connection_uri",
                "type": "object",
                "fields": {
                    "type": {
                        "order":1,
                        "type": "combo",
                        "defaultvalue": "serial",
                        "list_values": [
                            "serial"
                        ]
                    },
                    "port2": {
                        "order":2,
                        "type": "text",
                        "defaultvalue": "/dev/ttyUSB1"
                    },
                    "baudrate": {
                        "order":3,
                        "type": "number",
                        "defaultvalue": "115200",
                        "desc": "115200, 57600, ...etc."
                    },
                    "dynamic": {
                        "order":4,
                        "type": "checkbox",
                        "defaultvalue": false,
                        "desc": "if active then it will search from for example /dev/ttyUSB0 to /dev/ttyUSB10 so if you make it true do noot write a number next to port path."
                    }
                },
                "optional": false,
                "desc": "serial port settings - ONLY ONE fcb_connection_uri"
            }
        }
    },
    {
        "name": "Net tcp/udp Connection",
        "template": {
            "TCP/UDP Connection": {
                "fieldName": "fcb_connection_uri",
                "type": "object",
                "fields": {
                    "type": {
                        "type": "combo",
                        "defaultvalue": "udp",
                        "list_values": [
                            "tcp",
                            "udp"
                        ],
                        "desc": "tcp client or UDP listner"
                    },
                    "ip": {
                        "type": "text",
                        "defaultvalue": "127.0.0.1",
                        "desc": "if tcp then ip of the board, otherwise make it 127.0.0.1",
                        "css": "bg-warning"
                    },
                    "port": {
                        "type": "number",
                        "defaultvalue": 14550
                    }
                },
                "optional": false,
                "desc": "TCP/UDP connection settings - ONLY ONE fcb_connection_uri"
            }
        }
    },
    {
        "name":"Follow Me PID and Expo",
        "template":{
            "Follow Me PID and Expo":{
                "fieldName":"follow_me.ca",
                "type":"object",
                "fields":{
                    "PID_P_X":{
                        "order":1,
                        "type":"number",
                        "defaultvalue":1.0,
                        "desc": "Proportional gain for X axis tracking (0.1-5.0)"
                    },
                    "PID_P_Y":{
                        "order":2,
                        "type":"number",
                        "defaultvalue":1.0,
                        "desc": "Proportional gain for Y axis tracking (0.1-5.0)"
                    },
                    "PID_I_X":{
                        "order":3,
                        "type":"number",
                        "defaultvalue":0.00,
                        "desc": "Integral gain for X axis tracking (0.0-1.0)"
                    },
                    "PID_I_Y":{
                        "order":4,
                        "type":"number",
                        "defaultvalue":0.00,
                        "desc": "Integral gain for Y axis tracking (0.0-1.0)"
                    },
                    "PID_D_X":{
                        "order":5,
                        "type":"number",
                        "defaultvalue":0.00,
                        "optional": true,
                        "desc": "Derivative gain for X axis tracking (0.0-0.5)"
                    },
                    "PID_D_Y":{
                        "order":6,
                        "type":"number",
                        "defaultvalue":0.00,
                        "optional": true,
                        "desc": "Derivative gain for Y axis tracking (0.0-0.5)"
                    },
                    "expo_x":{
                        "order":7,
                        "type":"number",
                        "defaultvalue":0.5,
                        "optional": true,
                        "desc": "Exponential curve for X axis response (0.0-1.0)"
                    },
                    "expo_y":{
                        "order":8,
                        "type":"number",
                        "defaultvalue":0.5,
                        "optional": true,
                        "desc": "Exponential curve for Y axis response (0.0-1.0)"
                    },
                    "deadband_x":{
                        "order":9,
                        "type":"number",
                        "defaultvalue":0.1,
                        "optional": true,
                        "desc": "Deadband threshold for X axis (0.0-0.5)"
                    },
                    "deadband_y":{
                        "order":10,
                        "type":"number",
                        "defaultvalue":0.1,
                        "optional": true,
                        "desc": "Deadband threshold for Y axis (0.0-0.5)"
                    },
                    "Rate Limit":{
                        "order":11,
                        "fieldName": "rate_limit",
                        "type":"number",
                        "defaultvalue":0.1,
                        "optional": true,
                        "desc": "Max rate change per second (0.05-0.2)"
                    },
                    "Enable Center Hold":{
                        "order":12,
                        "fieldName": "center_hold_enabled",
                        "type":"checkbox",
                        "defaultvalue":false,
                        "optional": false,
                        "desc": "Enable pitch center hold for planes"
                    },
                    "Center Hold Y Band":{
                        "order":13,
                        "fieldName": "center_hold_y_band",
                        "type":"number",
                        "defaultvalue":0.05,
                        "optional": true,
                        "desc": "Y axis band for center hold (0.01-0.2)"
                    },
                    "Center Hold Decay":{
                        "order":14,
                        "fieldName": "center_hold_decay",
                        "type":"number",
                        "defaultvalue":0.1,
                        "optional": true,
                        "desc": "Center hold decay factor (0.0-1.0)"
                    },
                    "Kalman Filter":{
                        "order":15,
                        "fieldName": "kalman_enabled",
                        "type":"checkbox",
                        "defaultvalue":false,
                        "optional": false,
                        "desc": "Enable Kalman filtering for smooth tracking"
                    },
                    "Kalman Process Noise Q":{
                        "order":16,
                        "fieldName": "kalman_process_noise_q",
                        "type":"number",
                        "defaultvalue":0.05,
                        "optional": true,
                        "desc": "Kalman process noise (0.01-0.5)"
                    },
                    "Kalman Measurement Noise R":{
                        "order":17,
                        "fieldName": "kalman_measurement_noise_r",
                        "type":"number",
                        "defaultvalue":0.1,
                        "optional": true,
                        "desc": "Kalman measurement noise (0.01-1.0)"
                    }
                },
                "optional":false,
                "desc":"PID and Expo settings"
            }
        }   
    }
]